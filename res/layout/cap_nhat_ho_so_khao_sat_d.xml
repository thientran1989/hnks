<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mau_nen"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:background="@color/color_big_title">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/khoang_cach"
            android:textAppearance="?android:attr/textAppearanceLarge" 
            android:textColor="@color/white"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/khoangcachtucongtolapdatdentrambienap"
            android:textAppearance="?android:attr/textAppearanceMedium"
             android:textStyle="bold"  />

        <EditText
            android:id="@+id/edt_KC_CONGTO_DEN_TRAM_ho_so_khao_sat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusable="false"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/khoangcachtucongtolapdatdentrucluoihathe"
            android:textAppearance="?android:attr/textAppearanceMedium" 
             android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_KC_CONGTO_DEN_LUOI_ho_so_khao_sat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusable="false"
            android:inputType="numberDecimal" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vitritreocongto"
            android:textAppearance="?android:attr/textAppearanceMedium"
             android:textStyle="bold"  />

        <EditText
            android:id="@+id/edt_VI_TRI_TREO_ho_so_khao_sat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusable="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/truso"
            android:textAppearance="?android:attr/textAppearanceMedium"
             android:textStyle="bold"  />

        <EditText
            android:id="@+id/edt_TRU_ho_so_khao_sat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false" 
            android:ems="10"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/phan_loai_xay_dung"
            android:textAppearance="?android:attr/textAppearanceMedium" 
             android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_LOAI_XAY_DUNG_ho_so_khao_sat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:ems="10"
            android:focusable="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loai_nha"
            android:textAppearance="?android:attr/textAppearanceMedium"
             android:textStyle="bold"  />

        <EditText
            android:id="@+id/edt_LOAI_NHA_ho_so_khao_sat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusable="false" />
    </LinearLayout>

</LinearLayout>