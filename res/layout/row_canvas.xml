<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mau_nen"
    android:gravity="center"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imb_LOAI_CANVAS_row_canvas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete" />

        <TextView
            android:id="@+id/btn_SUA_row_canvas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/mau_nen"
            android:text="@string/sua"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/pading_line_row"
        android:paddingTop="@dimen/pading_line_row" >

        <View
            android:layout_width="@dimen/cyan_line_row"
            android:layout_height="match_parent"
            android:background="@color/cyan" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_TEN_row_canvas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.9"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/pading_line_row"
        android:paddingTop="@dimen/pading_line_row" >

        <View
            android:layout_width="@dimen/cyan_line_row"
            android:layout_height="match_parent"
            android:background="@color/cyan" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_XOA_row_canvas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/mau_nen"
        android:text="@string/xoa"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</LinearLayout>