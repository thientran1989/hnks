<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mau_nen"
    android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="3dp"
            android:gravity="center" >

            <TextView
                android:id="@+id/btn_SUA_row_them_vattu"
                android:layout_width="@dimen/button_round_large_size"
                android:layout_height="@dimen/button_round_large_size"
                android:text="@string/sua"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:background="@drawable/roud_button_ok"
                android:textColor="@color/white"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:paddingLeft="3dp"
            android:gravity="center|left" >

            <TextView
                android:id="@+id/tvTenVT_row_them_vattu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#0000ff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_ma_vtu_row_them_vattu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvGiaVT_row_them_vattu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:paddingRight="4dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|right" >

            <TextView
                android:id="@+id/btn_XOA_row_them_vattu"
                android:layout_width="@dimen/button_round_large_size"
                android:layout_height="@dimen/button_round_large_size"
                android:text="@string/xoa"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:background="@drawable/roud_button_xoa"
                android:textColor="@color/white"
                android:gravity="center" />

        </LinearLayout>

</LinearLayout>